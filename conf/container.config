

params.image_cachedir = "${projectDir}/images"

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]

    withLabel: caveman {
        container = "wtsicgp/cgpcavemanwrapper:1.19.1"
    }

    withName: cgpPindel {
        container = "wtsicgp/cgppindel:3.10.0"
    }

    withName: cgpBigWig {
        container = "wtsicgp/pcap-core:5.7.0"
    }

    withName: vafAugment {
        container = "wtsicgp/vafcorrect:5.7.2"
    }

    withLabel: vagrent {
        container = "wtsicgp/vagrent:v3.6.1"
    }
}

